<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>Bookmarx</title>
	<link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="/css/simplegrid.css" />
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<link rel="stylesheet" type="text/css" href="/css/edit.css">
	<link rel="stylesheet" type="text/css" href="/css/dropdown.css">

	<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300|Montserrat:400,700' rel='stylesheet' type='text/css'>

	<script type="text/javascript" src="index.js"></script>
</head>
<body>
	<nav class="navbar">
		<ul>
			<li class="navbar-left menu-button">
				<a class="button" id="menu"><i id="menu-icon" class="fa fa-bookmark-o fa-lg"></i> Bookmarx</a>
			</li>
	  		<li class="navbar-left search">
	  			<input type="text" placeholder="Search Bookmarks" />
	  			<button><i class="fa fa-search fa-lg"></i></button>
	  		</li>
		  		<li class="navbar-right">
					<!-- need to add  this div class func so css works with it 	<div class="dropdown">
						<div class="dropdown-content"> -->
				<form method="get">
					<select class="select-btn pull-right standardize-header-components" name="SortBy" onchange='this.form.submit()'>
			        	<option selected disabled>Sort</option>
			        	<option value="title">Title</option>
			        	<option value="url">URL</option>
			        	<option value="star">Favorites</option>
			        	<option value="create_date">Create Date</option>
			        	<option value="last_visit_date">Last Visits</option>
			        	<option value="star">Stared</option>
			        </select>
			        <noscript><input type="submit" value="Submit"></noscript>
			    </form>
				<!--		</div> </div>  -->
		  		</li>
	  			<li class="navbar-right">
	  				<a href="#addModal" class="button"><i class="fa fa-plus fa-lg"></i></a>
	  				<div id="addModal" class="modalDialog">

				    <div class="grid grid-pad">
				    	<a href="#close" title="Close" class="close x-button">x</a>
				    	<div class="tabs is-centered">
						  <ul>
						    <li id="add-bookmark" class="is-active"><a>Add Bookmark</a></li>
						    <li id="import-bookmark"><a>Import Bookmarks</a></li>
						  </ul>
						</div>
						<!-- Error messages -->
			            <% if(typeof errors != 'undefined') { %>
					      <div class="insertupdate-errors">
					        <ul>
					          <% for(var i=0; i < errors.length; i++) { %>
					          <li><%= errors[i].msg %></li>
					          <% } %>
					        </ul>
					      </div>
					    <% } %>
						<!-- -->
							  <form method='post' action='/insert'>
							        <div class="form" id="add-bookmark-form">
									    <input type="text" name="title" placeholder="Title">

									    <div class="textFieldWrapper">
									      <input type="url" name="url" placeholder="URL">
									    </div>

											<div class="ListFieldWrapper">
											<select name="folder_id">
												<% folders.forEach(function(folder) { %>
													<option value="<%= folder.id%>"><%= folder.name %></option>
												<% }); %>
											</select>
											</div>

										    <div class="buttonWrapper">
										      	<div><input type='submit' value="Save"></div>
										      	<div><a href="#close" title="Close" class="close"><i class="fa fa-times-circle fa-lg"></i> Cancel</a></div>
											 </div>
								  </form>
							 </div>
						<div class="form" id="import-bookmark-form">
							<div class="textFieldWrapper">
						      <input type="url" name="url" placeholder="File Path">
						    </div>
						    <div class="buttonWrapper">
							      	<div><i class="fa fa-folder-open fa-lg"></i> Browse</div>
							      	<div><a href="#close" title="Close" class="close"><i class="fa fa-times-circle fa-lg"></i> Cancel</a></div>
							</div>
						</div>
					</div>
				</div>
	  		</li>
		</ul>
	</nav>
	<div id="sidebar">
      <ul>
            <li class="pinned"><a href="/list/starred"><i class="fa fa-star fa-lg"></i> Starred</a></li>
            <li class="pinned"><a href="/list"><i class="fa fa-th fa-lg"></i> All</a></li>
            <% folders.forEach(function(folder) { %>
            	<li><a href="/list/<%= folder.id%>"><%= folder.name%></a></li>
            <% }); %>
      </ul>
      <input type="text" value="<%= current_folder_id%>">
      <input type="text" value="<%= order_by%>">
      <div class="buttonWrapper">
      	<div><i class="fa fa-plus-circle fa-lg"></i> Folder</div>
      	<div><i class="fa fa-download fa-lg"></i> Export</div>
	  </div>
    </div>
    <div id="right">
      <div class="main grid grid-pad">
      		<div id="title" class="col-1-1">
      			<div class="content">
      				<h1>BookMarks</h1>
      			</div>
      		</div>
			<% bookmarks.forEach(function(bookmark) { %>
	      	<div class="col-1-3 mobile-col-1-3">
				<div class="content">
					<div class="card card--small">
						<div style="background-color:#DE2924" class="card__image"></div>
						<a href="<%= bookmark.url %>"><h2 class="card__title"><%= bookmark.title %></h2></a>
							<div class="card__action-bar">
							<% if (bookmark.star == 0) { %>
  								<a class="card__button" href="/bookmarks/<%= bookmark.id%>/star"><i class="fa fa-star fa-lg"></i></a>
							<% } else { %>
								<a class="card__button" href="/bookmarks/<%= bookmark.id%>/unstar"><i class="fa fa-star fa-lg"></i></a>
							<% } %>
							
							<a class="card__button" href="/bookmarks/edit/<%= bookmark.id%>"><i class="fa fa-info-circle fa-lg"></i></a>
							<a class="card__button" href="/bookmarks/delete/<%= bookmark.id%>"><i class="fa fa-trash-o fa-lg"></i></a>
						</div>
					</div>
				</div>
			</div>
			<% }); %>
      </div>
    </div>
		<br>

</body>
</html>
